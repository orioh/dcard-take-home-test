{
    "restartable": "rs",
    "exec": "npm run lint && npm run dev-serve",
    "ignore": [
        ".git",
        "node_modules/",
        "dist/"
    ],
    "watch": [
        "src/"
    ],
    "execMap": {
        "ts": "node -r ts-node/register"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}